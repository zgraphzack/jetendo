	<cfsavecontent variable="output">
	<input type="radio" name="site_option_type_id" value="15" onClick="setType(15);" <cfif value EQ "15">checked="checked"</cfif>/>
	URL<br />
	</cfsavecontent>
	<cfreturn output>
</cffunction> 
